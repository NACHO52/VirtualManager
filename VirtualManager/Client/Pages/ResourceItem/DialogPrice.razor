

<MudDialog>
    <TitleContent>
    </TitleContent>
    <DialogContent>
        @* <MudTextField Value="@server.Id.ToString()" Label="Server ID" ReadOnly="true" /> *@
        <MudNumericField @bind-Value="NewPrice" HideSpinButtons="true" Label="Price" Variant="Variant.Outlined" Step=".2M" Class="shortField control_number" />
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Error" OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="AddPrice">Accept</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    [Parameter] public decimal NewPrice { get; set; } = new int();

    private void Cancel()
    {
        MudDialog.Cancel();
    }

    private void AddPrice()
    {
        MudDialog.Close(DialogResult.Ok(NewPrice));
    }
}
