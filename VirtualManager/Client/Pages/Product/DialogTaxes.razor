

<MudDialog>
    <TitleContent>
    </TitleContent>
    <DialogContent>

        <MudTable Items="@Taxes" Hover="true" Breakpoint="Breakpoint.Sm">
            <HeaderContent>
                <MudTh>Name</MudTh>
                <MudTh>Amount</MudTh>
                <MudTh></MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd DataLabel="Name">@context.Name</MudTd>
                <MudTd DataLabel="Amount">@context.Amount</MudTd>
                <MudTd DataLabel=" ">
                    <MudFab OnClick="@(() => Add(context.Id))" Color="Color.Primary" Icon="@Icons.Material.Filled.Edit" Size="Size.Small" IconSize="Size.Small">Add</MudFab>
                </MudTd>
            </RowTemplate>
        </MudTable>

    </DialogContent>
    @* <DialogActions>
        <MudButton Color="Color.Error" OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="AddPrice">Accept</MudButton>
    </DialogActions> *@
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    [Parameter] public IList<Tax> Taxes { get; set; }

    private void Cancel()
    {
        MudDialog.Cancel();
    }

    private void Add(int taxId)
    {
        MudDialog.Close(DialogResult.Ok(taxId));
    }
}
